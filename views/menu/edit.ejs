<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

<body>
    <div>
        <header class="header">
            <%- include('../partials/nav.ejs') %>
        </header>
        <h1 id="review-form">Edit Menu</h1>
        <form action="/addMenu" method="post" class="form-container">
            <div class="form-group">
                <input type="text" name="name" placeholder="Enter Menu Name" value="<%= menu.name %> ">
            </div>
            <div class="form-group">
                <input type="text" name="price" placeholder="Enter Price" value="<%= menu.price %>">
            </div>
            <div class="form-group">
                <select name="status" id="status" placeholder="Select Status" value="<%= menu.status %>">
                    <option value="Available">Available</option>
                    <option value="Not Available">Not Available</option>
                </select>
            </div>
            <div class="form-group">
                <textarea name="remarks" cols="50" rows="10" placeholder="Remarks" value="<%= menu.remarks %>"></textarea>
            </div>

            <button type="submit" value="Submit" class="form-btn">Send</button>
        </form>
        <%- include('../partials/footer.ejs') %>
    </div>
</body>

</html>