<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

<body>
    <div>
        <header class="header">
            <%- include('../partials/nav.ejs') %>
        </header>
        <h1 id="review-form">Edit Menu</h1>
        <form method="post" class="form-container">
            <div class="form-group">
                <input type="text" name="name"  value="<%= menu.name %>">
            </div>
            <div class="form-group">
                <input type="text" name="price" value="<%= menu.price %>">
            </div>
            <div class="form-group">
                <select name="status" id="status" value="<%= menu.status %>">
                    <option value="Available">Available</option>
                    <option value="Not Available">Not Available</option>
                </select>
            </div>
            <div class="form-group">
                <textarea name="remarks" cols="50" rows="10"><%= menu.remarks %></textarea>
            </div>

            <button type="submit" value="Submit" class="form-btn">Send</button>
        </form>
    </div>
</body>

</html>