<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

<body>
    <div id="wrapper">
        <header class="header">
            <%- include('../partials/nav.ejs') %>
        </header>
        
        <h1 id="review-form">Send us a Review</h1>
        <form method="post" class="form-container">
            <div class="form-group">
                <input type="text" name="fullname" placeholder="Enter Full Name">
            </div>
            <div class="form-group">
                <textarea name="message" cols="50" rows="20" placeholder="Leave a review"></textarea>
            </div>
            <button type="submit" value="Submit" class="form-btn">Send</button>
        </form>
        <%- include('../partials/footer.ejs') %>
    </div>
    <script src="JS/script.js"></script>
</body>

</html>