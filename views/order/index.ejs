<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <header class="header">
        <%- include('../partials/nav.ejs') %>
    </header>
    <h1 id="review-form">Order Summary</h1>

    <div>
        <% if(orders) { %>
            <% orders.forEach(order => { %>
                <p>Customer Name: <%= order.customer %></p>
                <p>Menu Name: <%= order.menu.name %></p>
                <p>Price: <%= order.cost %></p>
                <p>Paid: <%= order.paid %></p>
                <p>Date: <%= order.order_date %></p>
                <hr>
          <%  }) %> 
       <% } %> 
    </div>
</body>
</html>