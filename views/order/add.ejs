<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
<body>
    <header class="header">
        <%- include('../partials/nav.ejs') %>
    </header>
    <h1>Place Orders</h1>
    <form action="/orders/add/<%= menu._id %> " method="post" class="form-container">
        <label for="">Customer Name
            <input type="text" name="customer" id="">
            <input type="hidden" name="menu">
            <input type="hidden" name="order_date">
            <input type="hidden" name="cost" value="<%= menu.price %> ">
            <input type="hidden" name="paid">
            <input type="hidden" name="status" value="<%= menu.status %>">
        </label>
        <br>
        <br>
        <button type="submit" value="Submit" class="form-btn">Submit</button>
    </form>

    <h3>Order Details</h3>
    <p>Menu: <%= menu.name %></p> 
    <p>Price: <%= menu.price %></p>
    <p>Remarks: <%= menu.remarks %></p>
</body>
</html>